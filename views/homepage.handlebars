<!-- Calories Counter -->
        <div class="container z-depth-5">
            <div class="card">
                <div class="card-content">
                    <h3 class="center-align">
                        Total Calories: <span class="total-calories">0</span>
                    </h3>
                    <div style= "margin:auto; width: 300px; height: 300px;">
                        <canvas id="myChart"></canvas>
                    </div>
                </div>
            </div>    
        </div>

		<div class="container z-depth-5">
			<!-- Card -->
			<div class="card z-depth-5">
				<div class="card-content">
					<span class="card-title">Add Meal/ Food Item</span>
					<form action="" class="col">
						<div class="row">
							<div class="input-field col s6">
								<input
									name="post-title"
									type="text"
									placeholder="Add Item"
									id="item-name"
								/>
								<label for="item-name">Meal</label>
							</div>
							<div class="input-field col s6">
								<input
									name="post-calories"
									type="number"
									placeholder="Add Calories"
									id="item-calorie"
								/>
								<label for="item-name">Calorie</label>
							</div>

							<!-- Buttons -->
							<button class="add-btn btn green darken-3 z-depth-3">
								<i class="fa fa-plus"></i>
								&nbsp; Add Meal
							</button>

							<button class="update-btn btn orange z-depth-3">
								<i class="fa fa-pencil-square-o"></i>
								&nbsp;&nbsp; Update Meal
							</button>



							<button class="back-btn btn grey pull-right z-depth-3">
								<i class="fa fa-chevron-circle-left"></i>
								&nbsp; Back
							</button>
						</div>
					</form>
				</div>
			</div>

			<!-- Food items list  -->
			{{#if loggedIn}}
			<ul id="item-list" class="collection z-depth-5">
                {{#each posts as |post|}}
				 <li class="collection-item" id="item-0">
                    {{> post-info post}}
				</li>
                {{/each}}
			</ul>
			{{/if}}

			 <table id="table1" style="font-size: 18px;">
				<tr>
					<th>ID</th>
					<th>Item</th>
					<th>Calories</th>
					<th class="pull-right">Edit</th>
				</tr>
			</table>
		</div>

{{#if loggedIn}}
<script src="/javascript/delete-meal.js"></script>
<script src="/javascript/add-meal.js"></script>
{{/if}}